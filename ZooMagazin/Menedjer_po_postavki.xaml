<Window x:Class="ZooMagazin.Menedjer_po_postavki"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZooMagazin"
        mc:Ignorable="d"
        Title="Delivery Manager" Height="450" Width="800" WindowState="Maximized" WindowStyle="None" Background="#C2CBDE">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label  Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Right" Width="400" Height="50" Content="Менеджер по поставки" FontSize="20" Foreground="Black"/>
        <Button Width="400" Grid.Column="1" Height="50" Content="Договор поставки"  Foreground="White" Background="#6E7F80" Click="Button_Click"  Grid.Row="1"/>
        <Button Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Content="Выход" Margin="20,10,0,0"  Background="#6E7F80" Click="Button_Click_1"  />
   
    </Grid>
</Window>
