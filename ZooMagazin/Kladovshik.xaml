<Window x:Class="ZooMagazin.Kladovshik"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZooMagazin"
        mc:Ignorable="d"
        Title="Kladovshik" Height="450" Width="800" WindowState="Maximized" WindowStyle="None" Background="#C2CBDE">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" VerticalAlignment="Center" Width="120" Height="50" Content="Кладовщик" FontSize="20" Foreground="Black"/>


        <Button  Width="400" Height="50" Content="Данные о товаре"  Foreground="White" Background="#6E7F80" Click="Button_Click" Grid.Column="1" Grid.Row="1"/>
        <Button  Width="400" Height="50" VerticalAlignment="Top" Foreground="White" Content="Справочник товар"  Background="#6E7F80" Click="Button_Click_2" Grid.Column="1" Grid.Row="2"/>


        <Button Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Content="Выход" Margin="20,10,0,0"  Background="#6E7F80" Click="Button_Click_3"  />


    </Grid>
</Window>
